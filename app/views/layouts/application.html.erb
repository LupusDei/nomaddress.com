<!DOCTYPE html>
<html>
<head>
  <title>NomAddress <%=@title || ""%></title>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" %>
  <%= stylesheet_link_tag    "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class= 'header'>
    <a href="/" class="img_link"><img src='/assets/chopped-logo.png'/></a>
    <div style="float:right">
      <% if current_user %>
        <%= link_to 'logout', logout_path %>
      <% else %>
         <%= link_to 'login', login_path %>
      <% end %>
    </div>
  </div>

  <section>
    <%= yield %>
    <br>
    <br>
  </section>
  <div class='footer' style="text-align:center;">
    <img id='clouds'src="/assets/clouds.png" />
  	<%= render 'layouts/footer' %>
  </div>
</body>
</html>
